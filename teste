import tkinter as tk
from tkinter import ttk

# Cria a janela principal
root = tk.Tk()
root.title("Exemplo com LabelFrame")

# Cria um LabelFrame para agrupar informações
frame = ttk.LabelFrame(root, text="Informações")
frame.pack(padx=10, pady=10, fill="both", expand=True)

# Adiciona widgets dentro do LabelFrame
label1 = ttk.Label(frame, text="Nome: Herick")
label1.pack(anchor="w", padx=5, pady=5)

label2 = ttk.Label(frame, text="Idade: 25")
label2.pack(anchor="w", padx=5, pady=5)

label3 = ttk.Label(frame, text="Cidade: Campos Belos")
label3.pack(anchor="w", padx=5, pady=5)

# Exibe a janela
root.mainloop()