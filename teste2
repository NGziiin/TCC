import tkinter as tk

def move_widget(widget, x, y, dx, dy, steps):
    if steps > 0:
        widget.place(x=x, y=y)
        root.after(10, move_widget, widget, x + dx, y + dy, dx, dy, steps - 1)

root = tk.Tk()
root.geometry("400x400")

button = tk.Button(root, text="Move me")
button.place(x=0, y=0)

move_widget(button, 0, 0, 2, 2, 100)

root.mainloop()